<UserControl x:Class="POS.Views.SaleView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:viewmodels="clr-namespace:POS.ViewModels"
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             mc:Ignorable="d" 
             d:DesignHeight="625.977" d:DesignWidth="800">

    <UserControl.Resources>
        <viewmodels:SaleViewModel x:Key="sale" />
    </UserControl.Resources>
    
    <Grid DataContext="{Binding Source={StaticResource sale}}" Background="#fff">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="300" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="80" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Margin="10,0,0,0">
                <Grid Margin="15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Gestión de ventas" 
                                   Foreground="{StaticResource purpleTextColor1}" />

                        <TextBlock Text="Registra una nueva venta"
                                   Foreground="{StaticResource plainTextColor1}" />
                    </StackPanel>

                    <Button Grid.Column="2">
                        <StackPanel Orientation="Vertical">
                            <fa:IconImage Icon="List" />
                            <TextBlock Text="Listado de ventas"/>
                        </StackPanel>
                    </Button>
                </Grid>
            </Border>
            
            <Grid Grid.Row="1" Margin="10,0,10,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="150"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" 
                           Text="Productos"
                           FontWeight="SemiBold"
                           Margin="0,0,0,5" />

                <Border Grid.Row="1" BorderBrush="Gray"
                        BorderThickness="1"
                        Padding="5">
                    <StackPanel>
                        <TextBox x:Name="ProductSearchBox"
                                 Text="{Binding SearchProductQuery, UpdateSourceTrigger=PropertyChanged}"
                                 ToolTip="Buscar producto por nombre, código de barras, etc." />

                        <DataGrid ItemsSource="{Binding FilteredProducts}"
                                  SelectedItem="{Binding SelectedProduct, Mode=TwoWay}"
                                  AutoGenerateColumns="False"
                                  IsReadOnly="True"
                                  Margin="0,5,0,0">

                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Codigo" Binding="{Binding Code}" Width="Auto" />
                                <DataGridTextColumn Header="Producto" Binding="{Binding Description}" Width="*" />
                                <DataGridTextColumn Header="Precio" Binding="{Binding SalePrice}" Width="Auto" />
                                <DataGridTextColumn Header="Stock" Binding="{Binding Stock}" Width="Auto" />
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                </Border>

                <Border Grid.Row="2"
                        Margin="10"
                        BorderBrush="#0d0d0d"
                        Background="#fdfdfd" >
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="{Binding SelectedProduct.Description}" VerticalAlignment="Center" Margin="5,0"/>
                        <TextBlock Text="Cantidad:" VerticalAlignment="Center" Margin="5,0"/>
                        <TextBox Width="50"
                                 Text="{Binding SaleItemQuantity, UpdateSourceTrigger=PropertyChanged, StringFormat='{}{0:F1}'}"
                                 HorizontalAlignment="Center"
                                 VerticalAlignment="Center"
                                 Margin="0,0,10,0"/>
                        <TextBlock Text="Dcto (%):" VerticalAlignment="Center" Margin="5,0"/>
                        <TextBox Width="50"
                                 Text="{Binding SaleItemDiscount, UpdateSourceTrigger=PropertyChanged}"
                                 HorizontalAlignment="Center"
                                 VerticalAlignment="Center"
                                 Margin="0,0,10,0"/>

                        <Button Content="Agregar" Margin="5 0 5 0" Padding="10 3"
                                Background="#fff"
                                Foreground="#000"
                                BorderThickness="1"
                                Command="{Binding AddProductCommand}"/>
                    </StackPanel>
                </Border>

                <Border Grid.Row="3" BorderBrush="LightGray" BorderThickness="1" CornerRadius="5" Padding="15">
                    <StackPanel>
                        <TextBlock Text="Productos en el Carrito" FontWeight="SemiBold" Margin="0,0,0,10"/>
                        <ListView ItemsSource="{Binding SaleItems}" SelectedItem="{Binding SelectedItem}" Height="Auto">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="Codigo" Width="100" DisplayMemberBinding="{Binding Product.Code}"/>
                                    <GridViewColumn Header="Producto" Width="100" DisplayMemberBinding="{Binding Product.Description}"/>
                                    <GridViewColumn Header="Cantidad" DisplayMemberBinding="{Binding Quantity}"/>
                                    <GridViewColumn Header="Precio Unitario" DisplayMemberBinding="{Binding SalePrice, StringFormat=C}"/>
                                    <GridViewColumn Header="Dcto" DisplayMemberBinding="{Binding Discount}"/>
                                    <GridViewColumn Header="Subtotal" DisplayMemberBinding="{Binding Total, StringFormat=C}"/>
                                </GridView>
                            </ListView.View>
                        </ListView>
                        <Button Content="Quitar del Carrito"
                                Command="{Binding RemoveProductCommand}"
                                Margin="0,10,0,0"
                                HorizontalAlignment="Right"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
        <Border Grid.Column="1"
                Background="#f2f2f7"
                Margin="10">
            <StackPanel Margin="10">
                <TextBlock Text="Cliente"
                           FontWeight="SemiBold"
                           Margin="0,0,0,5" />

                <Border BorderBrush="Gray"
                        BorderThickness="1"
                        Padding="5">
                    <StackPanel>
                        <TextBox x:Name="ClientSearchBox"
                                 Text="{Binding SearchClientQuery, UpdateSourceTrigger=PropertyChanged}"
                                 ToolTip="Buscar cliente por DNI, nombre, etc." />

                        <DataGrid ItemsSource="{Binding FilteredClients}"
                                  SelectedItem="{Binding SelectedClient, Mode=TwoWay}"
                                  AutoGenerateColumns="False"
                                  IsReadOnly="True"
                                  Height="150"
                                  Margin="0,5,0,0">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Nombre" Binding="{Binding Name}" Width="*" />
                                <DataGridTextColumn Header="DNI" Binding="{Binding Dni}" Width="Auto" />
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                </Border>
                <TextBlock Text="Observaciones"
                            FontWeight="SemiBold"
                            Margin="0,0,0,5" />

                <Border BorderBrush="Gray"
                        BorderThickness="1"
                        Padding="5">
                    <StackPanel>
                        <TextBox Text="{Binding Sale.Observations, Mode=TwoWay}"></TextBox>
                    </StackPanel>
                </Border>
                <Separator Margin="0,15,0,15"/>
                <TextBlock Text="Resumen de la Venta" FontWeight="SemiBold"/>
                <StackPanel>
                    <TextBlock Text="Total:" FontWeight="Bold"/>
                    <TextBlock Text="{Binding Sale.Total, StringFormat=C, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>
                <Button Content="Completar Venta"
                        Command="{Binding SaveSaleCommand}"
                        Margin="0,15,0,0"/>
                
                
                
            </StackPanel>
            
        </Border>
    </Grid>
</UserControl>