<UserControl x:Class="POS.Views.ClientView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:POS.Views"
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             xmlns:System="clr-namespace:System;assembly=System.Runtime" 
             xmlns:viewmodels="clr-namespace:POS.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <viewmodels:ClientViewModel x:Key="clients"/>
    </UserControl.Resources>

    <Grid Background="#fff"
          DataContext="{Binding Source={StaticResource clients}}">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0"
                CornerRadius="0,0,0,0"
                Margin="10,0,0,0">
            <Grid Margin="15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Gestion de clientes" Foreground="{StaticResource purpleTextColor1}"/>
                    <TextBlock Text="Administra la informacion de tus clientes" Foreground="{StaticResource plainTextColor1}"/>
                </StackPanel>
            </Grid>
        </Border>

        <Border Grid.Row="1"
                Background="#F2F2F7"
                CornerRadius="10"
                Width="400"
                Margin="20 0 0 0"
                HorizontalAlignment="Left">
            <Grid Margin="10,0,15,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <fa:IconImage Icon="MagnifyingGlass" 
                      Foreground="{StaticResource plainTextColor1}" 
                      VerticalAlignment="Center" 
                      Margin="0,0,10,0" 
                      Height="15" />

                <TextBlock x:Name="PlaceholderText"
                   Grid.Column="1"
                   Text="Buscar clientes por dni, nombre, teléfono..."
                   Foreground="{StaticResource plainTextColor1}"
                   VerticalAlignment="Center"
                   IsHitTestVisible="False"
                   FontSize="14"
                   FontStyle="Italic">
                    <TextBlock.Style>
                        <Style TargetType="{x:Type TextBlock}">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Text, ElementName=SearchTextBox}" Value="">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Text, ElementName=SearchTextBox}" Value="{x:Static System:String.Empty}">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Path=Text.Length, ElementName=SearchTextBox}" Value="0">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                            <Setter Property="Visibility" Value="Hidden"/>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>

                <TextBox x:Name="SearchTextBox"
                 Grid.Column="1"
                 Foreground="#333"  Background="Transparent"
                 BorderBrush="Transparent"
                 VerticalAlignment="Center"
                 FontSize="14"/>
                
            </Grid>
        </Border>

        <Border Grid.Row="2" CornerRadius="10" Background="#F2F2F7"
                Margin="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="300"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0"
                        Margin="10"
                        BorderBrush="#0d0d0d"
                        Background="#fdfdfd" >
                    <StackPanel Orientation="Vertical">
                        <Label Content="Dni:" />
                        <TextBox  Margin="0 0" 
                                  Width="270"
                                  HorizontalAlignment="Center"
                                  Text="{Binding Client.Dni, Mode=TwoWay}"/>

                        <Label Content="Nombre:" />
                        <TextBox Margin="0 0" 
                                  Width="270"
                                  HorizontalAlignment="Center"
                                 Text="{Binding Client.Name, Mode=TwoWay}"/>

                        <Label Content="Apellido:" />
                        <TextBox Margin="0 0" 
                                 Width="270"
                                 HorizontalAlignment="Center"
                                 Text="{Binding Client.LastName, Mode=TwoWay}"/>

                        <Label Content="Email:" />
                        <TextBox Margin="0 0" 
                                  Width="270"
                                  HorizontalAlignment="Center"
                                 Text="{Binding Client.Email, Mode=TwoWay}"/>

                        <Label Content="Telefono:" />
                        <TextBox Margin="0 0" 
                                  Width="270"
                                  HorizontalAlignment="Center"
                                 Text="{Binding Client.Phone, Mode=TwoWay}"/>

                        <Label Content="Direccion:" />
                        <TextBox Margin="0 0" 
                                 Width="270"
                                 HorizontalAlignment="Center"
                                 Text="{Binding Client.Address, Mode=TwoWay}"/>

                        <Button Content="Agregar" Margin="5 10 5 0" Padding="10 3"
                                Background="#fff"
                                Foreground="#000"
                                BorderThickness="1"
                                Command="{Binding AddCommand}"/>

                        <Button Content="Actualizar" 
                    Command="{Binding UpdateCommand}"
                    Margin="5 10 5 0" Padding="10 3"/>

                        <Button Content="Eliminar" 
                    Command="{Binding DeleteCommand}"
                    Margin="5 10 5 0" Padding="10 3"/>
                    </StackPanel>
                </Border>

                <DataGrid Grid.Column="1"
                          Style="{StaticResource dataGridStyle}"
                          ColumnHeaderStyle="{StaticResource dataGridHeaderStyle}"
                          CellStyle="{StaticResource dataGridCellStyle}"
                          RowStyle="{StaticResource dataGridRowStyle}"
                          AutoGenerateColumns="False"
                          ItemsSource="{Binding Clients}"
                          SelectedItem="{Binding SelectedClient, Mode=TwoWay}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Dni" Binding="{Binding Dni}" />
                        <DataGridTextColumn Header="Name" Binding="{Binding Name}" />
                        <DataGridTextColumn Header="LastName" Binding="{Binding LastName}" />
                        <DataGridTextColumn Header="Email" Binding="{Binding Email}" />
                        <DataGridTextColumn Header="Phone" Binding="{Binding Phone}" />
                        <DataGridTextColumn Header="Address" Binding="{Binding Address}" />
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>
    </Grid>
</UserControl>